    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemon": "^3.1.10",
    "pg": "^8.16.3",
    "resend": "^6.2.0-preview-contacts.0",
    "stripe": "^18.5.0"
  },
